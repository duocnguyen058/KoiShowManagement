@{
    ViewData["Title"] = "Đăng ký cá Koi";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label for="KoiName">Tên cá Koi</label>
        <input type="text" class="form-control" id="KoiName" name="KoiName" required />
    </div>
    <div class="form-group">
        <label for="KoiAge">Tuổi cá Koi</label>
        <input type="number" class="form-control" id="KoiAge" name="KoiAge" required />
    </div>
    <div class="form-group">
        <label for="Category">Danh mục cá Koi</label>
        <select class="form-control" id="Category" name="Category">
            <option value="Category1">Danh mục 1</option>
            <option value="Category2">Danh mục 2</option>
            <option value="Category3">Danh mục 3</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Đăng ký</button>
</form>
