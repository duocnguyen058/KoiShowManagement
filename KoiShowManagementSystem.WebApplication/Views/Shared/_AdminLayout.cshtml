    @using Microsoft.AspNetCore.Identity
    @using Microsoft.AspNetCore.Authorization
    @{
        var user = Context.User;
    }

    <!DOCTYPE html>
    <html lang="vi">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewData["Title"] - Koi Show Management</title>
        <link href="~/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/css/admin-style.css" rel="stylesheet" />
    </head>
    <body>
        <div class="container-fluid">
            <!-- Header -->
            <header>
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <a class="navbar-brand" href="#">Koi Show Management</a>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ml-auto">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <span class="nav-link">Chào, @user.Identity.Name</span>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/Account/Logout">Đăng xuất</a>
                                </li>
                            }
                        </ul>
                    </div>
                </nav>
            </header>

            <div class="row">
                <div class="col-md-2">
                    <!-- Sidebar -->
                    <div class="sidebar">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Dashboard", "Admin")">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("GetAllAccountsAsync", "Admin")">Quản lý tài khoản</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("GetAllCompetitionsAsync", "Admin")">Quản lý cuộc thi</a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("AdminDashboard", "Admin")">Dashboard Admin</a>
                                </li>
                            }
                            @if (User.IsInRole("Manager"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("ManagerDashboard", "Admin")">Dashboard Manager</a>
                                </li>
                            }
                            @if (User.IsInRole("Staff"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("StaffDashboard", "Admin")">Dashboard Staff</a>
                                </li>
                            }
                            @if (User.IsInRole("Referee"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("RefereeDashboard", "Admin")">Dashboard Referee</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="col-md-10">
                    <!-- Main Content -->
                    <div class="main-content">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>

        <footer class="footer bg-light">
            <div class="container">
                <span class="text-muted">Koi Show Management - All Rights Reserved</span>
            </div>
        </footer>

        <script src="~/js/bootstrap.bundle.min.js"></script>
    </body>
    </html>
