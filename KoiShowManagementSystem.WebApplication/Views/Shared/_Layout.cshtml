<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống Quản lý Cuộc thi Koi</title>

    <!-- Liên kết đến tệp CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* CSS cơ bản */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding-top: 120px;
            background: #f9f9f9;
            color: #333;
            line-height: 1.8;
            transition: background-color 0.3s ease;
        }

        header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: linear-gradient(90deg, #1E90FF, #4169E1);
            color: white;
            padding: 25px 0;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            z-index: 1000;
            transition: padding 0.3s ease, background-color 0.3s ease;
        }

            header h1 {
                font-size: 2.8rem;
                margin: 0;
                text-align: center;
                font-weight: bold;
                letter-spacing: 4px;
                text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);
            }

        .menu {
            display: flex;
            justify-content: center;
            padding: 0;
            margin: 0;
            list-style: none;
            background: rgba(0, 0, 0, 0.3);
            border-radius: 30px;
            transition: transform 0.3s ease, background-color 0.3s ease;
        }

            .menu li {
                margin: 0 25px;
                transition: transform 0.3s ease, color 0.3s ease;
            }

                .menu li a {
                    color: #fefefe;
                    text-decoration: none;
                    padding: 18px 30px;
                    display: block;
                    font-size: 1.4rem;
                    border-radius: 30px;
                    font-weight: bold;
                    transition: background-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
                }

                    .menu li a:hover {
                        background-color: #21618c;
                        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
                        transform: scale(1.1);
                        transition: transform 0.3s ease, background-color 0.3s ease;
                    }

        .account .dropdown-content {
            display: none;
            position: absolute;
            top: 60px;
            background-color: #34495E;
            min-width: 200px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
            z-index: 1;
            border-radius: 8px;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .account:hover .dropdown-content {
            display: block;
            opacity: 1;
        }

        .dropdown-content a {
            color: #ffffff;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

            .dropdown-content a:hover {
                background-color: #2C3E50;
                transform: scale(1.05);
            }

        footer {
            background-color: #34495E;
            color: #ffffff;
            padding: 30px 20px;
            text-align: center;
            font-size: 1rem;
            margin-top: 50px;
            box-shadow: 0 -4px 15px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease;
        }

            footer p {
                margin: 0;
                font-size: 0.9rem;
            }

        .container {
            max-width: 1200px;
            margin: auto;
            padding: 60px 20px;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .container:hover {
                transform: scale(1.02);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            }

        .btn {
            display: inline-block;
            padding: 12px 25px;
            background-color: #3498db;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-size: 1rem;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .btn:hover {
                background-color: #2980b9;
                transform: translateY(-5px);
            }

        /* Hiệu ứng parallax cho background */
        .parallax {
            background-image: url('/images/koi-background.jpg'); /* Sử dụng hình nền từ thư mục images */
            background-attachment: fixed;
            background-size: contain; /* Thay đổi từ cover sang contain để ảnh nền vừa vặn hơn */
            background-position: center;
            height: 350px; /* Giảm chiều cao của ảnh nền */
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            font-size: 2rem; /* Giảm kích thước chữ */
            text-shadow: 3px 3px 15px rgba(0, 0, 0, 0.5);
        }

        .no-parallax .parallax {
            background-attachment: scroll; /* Hủy bỏ hiệu ứng "fixed" */
            background-size: cover; /* Hoặc giữ cover nếu bạn muốn ảnh nền không bị vỡ */
            height: auto; /* Đặt lại chiều cao mặc định */
        }

        .parallax h2 {
            margin: 0;
            font-weight: 700;
        }

        /* Thu nhỏ thanh menu khi cuộn trang xuống */
        .menu.shrink {
            transform: scale(0.85);
        }

    </style>
</head>
<body class="@ViewData["BodyClass"]">
    <header>
        <h1>Triễn Lãm Cá Koi Toàn Quốc</h1>
        <ul class="menu">
            <li><a href="/Home/Index">Trang Chủ</a></li>
            <li><a href="/Home/CompetitionList">Danh Sách Cuộc Thi</a></li>
            <li><a href="/Home/About">Giới Thiệu</a></li>
            @if (User.Identity.IsAuthenticated)
            {
                <li class="account">
                    <a href="javascript:void(0)">Tài khoản</a>
                    <div class="dropdown-content">
                        <a href="/Account/Profile">Trang Cá Nhân</a>
                        <a href="/Member/RegisterKoi">Đăng ký cá Koi</a>
                        <a href="/Member/CompetitionHistory">Lịch sử thi đấu</a>
                        <a href="/Account/Logout">Đăng Xuất</a>
                    </div>
                </li>
            }
            else
            {
                <li><a href="/Account/Login">Đăng Nhập</a></li>
                <li><a href="/Account/Register">Đăng Ký</a></li>
            }
        </ul>
    </header>

    <!-- Phần nội dung trang -->
    <div class="parallax">
        <h2>Chào mừng đến với Triển lãm Cá Koi</h2>
    </div>

    <div class="container">
        <main role="main" class="content">
            @RenderBody()
        </main>
    </div>

    <footer>
        <p>Liên hệ: Địa chỉ triển lãm - Điện thoại: 0123 456 789 - Email: contact@koi-exhibition.com</p>
        <p>&copy; 2024 Hệ thống Quản lý Cuộc thi Koi</p>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Tự động thu nhỏ menu khi cuộn trang xuống
        window.addEventListener("scroll", function () {
            var menu = document.querySelector('.menu');
            if (window.scrollY > 50) {
                menu.classList.add('shrink');
                document.querySelector('header').style.padding = '10px 0';
            } else {
                menu.classList.remove('shrink');
                document.querySelector('header').style.padding = '25px 0';
            }
        });

        // Kiểm tra trang hiện tại khi tải trang
        window.addEventListener('DOMContentLoaded', function () {
            var currentPage = window.location.pathname;

            var menu = document.querySelector('.menu');
            if (currentPage !== "/Home/Index" && currentPage !== "/Home/CompetitionList") {
                menu.style.backgroundColor = '#2980b9';
            }
        });
    </script>
</body>
</html>
