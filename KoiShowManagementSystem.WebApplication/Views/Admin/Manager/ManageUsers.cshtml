@{
    ViewData["Title"] = "Quản lý người dùng";
}

<h2>@ViewData["Title"]</h2>

<!-- Danh sách người dùng -->
<table class="table">
    <thead>
        <tr>
            <th>Tên người dùng</th>
            <th>Email</th>
            <th>Vai trò</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>@user.Status</td>
                <td>
                    <a href="/Admin/Manager/EditUser/@user.Id" class="btn btn-warning">Sửa</a>
                    <a href="/Admin/Manager/DeleteUser/@user.Id" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Thêm người dùng mới -->
<a href="/Admin/Manager/AddUser" class="btn btn-success">Thêm người dùng mới</a>
