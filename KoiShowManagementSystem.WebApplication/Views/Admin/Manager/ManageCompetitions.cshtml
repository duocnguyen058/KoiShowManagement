@{
    ViewData["Title"] = "Quản lý cuộc thi";
}

<h2>@ViewData["Title"]</h2>

<!-- Danh sách các cuộc thi -->
<table class="table">
    <thead>
        <tr>
            <th>Tên cuộc thi</th>
            <th>Ngày bắt đầu</th>
            <th>Ngày kết thúc</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var competition in Model.Competitions)
        {
            <tr>
                <td>@competition.Name</td>
                <td>@competition.StartDate.ToString("dd/MM/yyyy")</td>
                <td>@competition.EndDate.ToString("dd/MM/yyyy")</td>
                <td>@competition.Status</td>
                <td>
                    <a href="/Admin/Manager/EditCompetition/@competition.Id" class="btn btn-warning">Sửa</a>
                    <a href="/Admin/Manager/DeleteCompetition/@competition.Id" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Thêm cuộc thi -->
<a href="/Admin/Manager/AddCompetition" class="btn btn-success">Thêm cuộc thi mới</a>
