@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Trang Chính";
}

<h1>Chào mừng bạn đến với trang quản lý!</h1>

@if (User.Identity.IsAuthenticated)
{
    <p>Chào, @User.Identity.Name! Bạn đã đăng nhập.</p>

    <h3>Thông tin người dùng</h3>
    <p>Email: @User.FindFirst("email")?.Value</p>
    <p>Vai trò: @string.Join(", ", User.Claims.Where(c => c.Type == "role").Select(c => c.Value))</p>

    <!-- Các nút chức năng sẽ được hiển thị tùy theo vai trò -->
    @if (User.IsInRole("Admin"))
    {
        <p><a href="@Url.Action("AdminDashboard", "Admin")">Đi tới Dashboard của Admin</a></p>
    }
    else if (User.IsInRole("Manager"))
    {
        <p><a href="@Url.Action("ManagerDashboard", "Admin")">Đi tới Dashboard của Manager</a></p>
    }
    else if (User.IsInRole("Staff"))
    {
        <p><a href="@Url.Action("StaffDashboard", "Admin")">Đi tới Dashboard của Staff</a></p>
    }
    else if (User.IsInRole("Referee"))
    {
        <p><a href="@Url.Action("RefereeDashboard", "Admin")">Đi tới Dashboard của Referee</a></p>
    }
}
else
{
    <p>Vui lòng đăng nhập để truy cập các tính năng quản lý.</p>
    <a href="/Account/Login">Đăng nhập</a>
}
