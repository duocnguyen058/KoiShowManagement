@{
    ViewData["Title"] = "Chấm điểm cá Koi";
}

<h2>@ViewData["Title"]</h2>

<!-- Form chấm điểm cá Koi -->
<form method="post" action="/Admin/Referee/ScoreKoi">
    <div class="form-group">
        <label for="KoiId">Chọn cá Koi</label>
        <select id="KoiId" name="KoiId" class="form-control">
            @foreach (var koi in Model.KoiList)
            {
                <option value="@koi.Id">@koi.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Score">Chấm điểm</label>
        <input type="number" id="Score" name="Score" class="form-control" min="1" max="10" required />
    </div>

    <button type="submit" class="btn btn-primary">Chấm điểm</button>
</form>
