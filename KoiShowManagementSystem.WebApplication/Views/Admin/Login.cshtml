@{
    ViewData["Title"] = "Đăng nhập hệ thống quản lý";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập - Hệ thống Quản lý Cuộc thi Koi</title>

    <style>
        body {
            background: linear-gradient(45deg, #6a11cb, #2575fc); /* Gradient nền */
            font-family: 'Arial', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            overflow: hidden;
        }

        /* Container form đăng nhập */
        .form-signin {
            max-width: 450px;
            width: 100%;
            padding: 40px;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            opacity: 0; /* Ban đầu ẩn */
            visibility: hidden; /* Ẩn form khi tải trang */
            transition: opacity 1s ease-out, visibility 0s 1s;
            display: flex;
            flex-direction: column; /* Đảm bảo các phần tử sắp xếp theo chiều dọc */
            align-items: stretch;
        }

            .form-signin.show {
                opacity: 1; /* Khi áp dụng class show, form sẽ hiện lên */
                visibility: visible;
                transition: opacity 1s ease-out, visibility 0s 0s;
            }

        /* Tiêu đề của form */
        h2 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 32px;
            color: #333;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        /* Các trường input */
        .form-group {
            display: flex;
            flex-direction: column; /* Đảm bảo label và input nằm theo chiều dọc */
            margin-bottom: 20px;
        }

            .form-group label {
                font-size: 14px;
                font-weight: 600;
                color: #495057;
                margin-bottom: 8px; /* Cách khoảng giữa label và input */
            }

        .form-control {
            padding: 14px;
            font-size: 16px;
            border-radius: 8px;
            border: 1px solid #ced4da;
            background-color: #f8f9fa;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #6a11cb;
                box-shadow: 0 0 0 0.2rem rgba(106, 17, 203, 0.25);
            }

        /* Nút đăng nhập */
        .btn {
            margin-top: 20px;
            font-size: 16px;
            padding: 14px;
            border-radius: 8px;
            cursor: pointer;
            width: 100%;
            transition: background-color 0.3s ease, transform 0.3s ease;
            font-weight: bold;
        }

        .btn-primary {
            background-color: #6a11cb;
            border: none;
            color: white;
        }

            .btn-primary:hover {
                background-color: #4e0a8f;
                transform: scale(1.05);
            }

            .btn-primary:active {
                transform: scale(0.98);
            }

        /* Thông báo lỗi */
        .alert-danger {
            margin-top: 20px;
            background-color: #f8d7da;
            color: #721c24;
            padding: 15px;
            border-radius: 8px;
            font-size: 16px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        /* Hiển thị mật khẩu */
        .show-password {
            display: flex;
            align-items: center;
            margin-top: 5px;
        }

            .show-password input {
                margin-right: 5px;
            }

    </style>
</head>
<body>

    <div class="form-signin">
        <h2>@ViewData["Title"]</h2>

        <form method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="Username">Tên Tài Khoản</label>
                <input type="text" class="form-control" id="Username" name="Username" required placeholder="Nhập tên tài khoản" />
            </div>

            <div class="form-group">
                <label for="Password">Mật Khẩu</label>
                <input type="password" class="form-control" id="Password" name="Password" required placeholder="Nhập mật khẩu" />
                <div class="show-password">
                    <input type="checkbox" id="togglePassword">
                    <label for="togglePassword">Hiển thị mật khẩu</label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
        </form>

        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger mt-2">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }

    </div>

    <script>
        // Hiển thị form khi trang đã load
        window.onload = function () {
            document.querySelector('.form-signin').classList.add('show');
        };

        // Hiển thị/ẩn mật khẩu
        document.getElementById("togglePassword").addEventListener("change", function () {
            var passwordField = document.getElementById("Password");
            if (this.checked) {
                passwordField.type = "text";
            } else {
                passwordField.type = "password";
            }
        });
    </script>

</body>
</html>
