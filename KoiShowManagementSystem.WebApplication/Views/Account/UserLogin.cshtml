@{
    Layout = "_Layout";
    ViewData["Title"] = "Trang Đăng Nhập";
    ViewData["BodyClass"] = "no-parallax";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập - Hệ thống Quản lý Cuộc thi Koi</title>

    <!-- Tích hợp CSS -->
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f7f6;
            margin: 0;
            padding: 0;
        }

        .login-register-form {
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
            background-color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .login-register-form h2 {
            text-align: center;
            font-size: 2rem;
            margin-bottom: 20px;
            color: #2980b9;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            font-weight: bold;
            color: #333;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border-radius: 5px;
            border: 1px solid #ddd;
            box-sizing: border-box;
        }

        .form-control:focus {
            border-color: #2980b9;
            box-shadow: 0 0 5px rgba(41, 128, 185, 0.3);
        }

        .btn {
            background-color: #2980b9;
            color: white;
            font-weight: bold;
            border-radius: 5px;
            padding: 10px 15px;
            width: 100%;
            font-size: 1.1rem;
            transition: background-color 0.3s ease;
        }

        .btn:hover {
            background-color: #3498db;
        }

        .mt-3 {
            margin-top: 15px;
        }

        a {
            color: #2980b9;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        .text-center {
            text-align: center;
        }

        .show-password {
            display: flex;
            align-items: center;
            margin-top: 5px;
        }

        .show-password input {
            margin-right: 5px;
        }
    </style>
</head>
<body>

    <div class="login-register-form">
        <h2>Đăng nhập</h2>

        <form method="post">
            <div class="form-group">
                <label for="Username">Tên Tài Khoản</label>
                <input type="text" class="form-control" id="Username" name="Username" required />
            </div>
            <div class="form-group">
                <label for="Password">Mật Khẩu</label>
                <input type="password" class="form-control" id="Password" name="Password" required />
                <div class="show-password">
                    <input type="checkbox" id="togglePassword">
                    <label for="togglePassword">Hiển thị mật khẩu</label>
                </div>
            </div>

            <!-- Thêm trường ReturnUrl vào form -->
            <input type="hidden" name="ReturnUrl" value="" />

            <button type="submit" class="btn">Đăng nhập</button>
        </form>

        <p class="mt-3 text-center">
            Chưa có tài khoản? <a href="register">Đăng ký ngay</a>
        </p>
    </div>

    <!-- Tích hợp JavaScript -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Lấy form và các trường đầu vào
            const form = document.querySelector("form");
            const usernameInput = document.getElementById("Username");
            const passwordInput = document.getElementById("Password");
            const togglePassword = document.getElementById("togglePassword");

            // Thêm sự kiện 'submit' cho form để kiểm tra dữ liệu đầu vào
            form.addEventListener("submit", function (event) {
                let isValid = true;
                let errorMessage = "";

                if (usernameInput.value.trim() === "") {
                    isValid = false;
                    errorMessage += "Tên tài khoản không được để trống.\n";
                }

                if (passwordInput.value.trim() === "") {
                    isValid = false;
                    errorMessage += "Mật khẩu không được để trống.\n";
                }

                if (!isValid) {
                    event.preventDefault();
                    alert(errorMessage);
                }
            });

            // Thêm sự kiện để hiển thị hoặc ẩn mật khẩu
            togglePassword.addEventListener("change", function () {
                if (togglePassword.checked) {
                    passwordInput.type = "text";
                } else {
                    passwordInput.type = "password";
                }
            });
        });
    </script>
</body>
</html>
