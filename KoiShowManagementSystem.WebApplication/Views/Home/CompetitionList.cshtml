@model IEnumerable<KoiShowManagementSystem.Repositories.Entities.Competition>

@{
    ViewData["Title"] = "Danh sách Cuộc thi";
    Layout = "_Layout";
}

<h1 class="text-center text-primary mb-4">@ViewData["Title"]</h1>

<div class="container">
    <table class="table table-bordered table-striped table-hover shadow-sm">
        <thead class="thead-dark">
            <tr>
                <th>Tên cuộc thi</th>
                <th>Ngày bắt đầu</th>
                <th>Ngày kết thúc</th>
                <th>Địa điểm</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var competition in Model)
                {
                    <tr class="table-row">
                        <td>@competition.Name</td>
                        <td>@competition.StartDate?.ToString("dd/MM/yyyy") ?? "N/A"</td>
                        <td>@competition.EndDate?.ToString("dd/MM/yyyy") ?? "N/A"</td>
                        <td>@competition.Location ?? "Không có thông tin"</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">Chưa có cuộc thi nào trong hệ thống.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- CSS Style -->
<style>
    body {
        background-color: #eef2f7;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        background-color: #ffffff;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        max-width: 90%;
        margin: auto;
    }

    h1 {
        color: #2c3e50;
        font-weight: 600;
    }

    .table {
        border-radius: 8px;
        overflow: hidden;
    }

        .table thead {
            background-color: #1d1f23;
            color: #ffffff;
        }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
            padding: 15px;
            font-size: 14px;
        }

    .table-row:hover {
        background-color: #f1f1f1;
    }

    .text-muted {
        font-style: italic;
        color: #6c757d;
    }
</style>
