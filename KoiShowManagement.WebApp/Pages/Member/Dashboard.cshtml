@page
@model KoiShowManagement.WebApp.Pages.Member.DashboardModel

<h2>Dashboard</h2>

<!-- Hiển thị thông tin cá nhân -->
<div>
    <h3>Thông tin cá nhân</h3>
    <p><strong>Tên:</strong> @Model.UserProfile.Name</p>
    <p><strong>Email:</strong> @Model.UserProfile.Email</p>
</div>

<!-- Hiển thị các hoạt động gần đây -->
<div>
    <h3>Hoạt động gần đây</h3>
    <ul>
        @foreach (var activity in Model.RecentActivities)
        {
            <li>@activity</li>
        }
    </ul>
</div>
