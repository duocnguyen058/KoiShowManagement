@page
@model KoiShowManagement.WebApp.Pages.Member.UpdateProfileModel

<h2>Cập nhật hồ sơ</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div>
        <strong>@Model.Message</strong>
    </div>
}

<form method="post">
    <div>
        <label for="FullName">Tên đầy đủ:</label>
        <input type="text" id="FullName" name="UserProfile.FullName" value="@Model.UserProfile.FullName" />
    </div>
    <div>
        <label for="Email">Email:</label>
        <input type="email" id="Email" name="UserProfile.Email" value="@Model.UserProfile.Email" />
    </div>
    <div>
        <label for="PhoneNumber">Số điện thoại:</label>
        <input type="text" id="PhoneNumber" name="UserProfile.PhoneNumber" value="@Model.UserProfile.PhoneNumber" />
    </div>
    <button type="submit">Cập nhật hồ sơ</button>
</form>
