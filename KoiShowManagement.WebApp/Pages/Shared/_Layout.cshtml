<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KoiShowManagement</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="/">KoiShow</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Trang chủ</a></li> <!-- Đã chỉnh sửa từ "/Home/Index" thành "/" -->
                    <li class="nav-item"><a class="nav-link" href="/Home/About">Giới thiệu</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Competitions">Cuộc thi</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Account/Login">Đăng nhập</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container mt-5">
        @RenderBody() <!-- Khu vực nội dung chính của mỗi trang con sẽ được render ở đây -->
    </div>

    <footer class="bg-primary text-white text-center py-3 mt-5">
        <p>&copy; 2024 - KoiShowManagement</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
