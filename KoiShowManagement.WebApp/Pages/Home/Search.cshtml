@page
@model KoiShowManagement.WebApp.Pages.Home.SearchModel
@{
    ViewData["Title"] = "Tìm kiếm";
}

<h1 class="text-center">Tìm kiếm</h1>
<form class="form-inline my-4 justify-content-center" method="get">
    <input type="text" name="query" class="form-control mr-2" placeholder="Nhập từ khóa tìm kiếm" value="@Model.Query" />
    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
</form>

@if (Model.Results != null && Model.Results.Any())
{
    <h2 class="text-center">Kết quả tìm kiếm</h2>
    <ul class="list-group mt-4">
        @foreach (var result in Model.Results)
        {
            <li class="list-group-item">@result</li>
        }
    </ul>
}
else if (Model.SearchPerformed)
{
    <p class="text-center text-muted">Không tìm thấy kết quả nào cho từ khóa "@Model.Query".</p>
}
