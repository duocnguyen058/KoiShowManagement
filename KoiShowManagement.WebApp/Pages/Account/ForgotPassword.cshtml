@page
@model KoiShowManagement.WebApp.Pages.Account.ForgotPasswordModel

<h2>Quên Mật Khẩu</h2>
<p>Vui lòng nhập email của bạn để nhận liên kết đặt lại mật khẩu.</p>

<form method="post">
    <div class="form-group">
        <label for="email">Địa chỉ Email</label>
        <input type="email" id="email" class="form-control" name="Email" required />
    </div>
    <button type="submit" class="btn btn-primary">Gửi liên kết đặt lại mật khẩu</button>
</form>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-info">
        @Model.StatusMessage
    </div>
}
