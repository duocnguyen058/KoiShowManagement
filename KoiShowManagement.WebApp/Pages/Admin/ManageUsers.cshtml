<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Email</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserId</td> <!-- Thay Id bằng UserId -->
                <td>@user.Username</td> <!-- Thay Name bằng Username -->
                <td>N/A</td> <!-- Không có thuộc tính Email, bạn có thể hiển thị thông tin khác hoặc để trống -->
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-userId="@user.UserId" onsubmit="return confirm('Bạn có chắc chắn muốn xóa người dùng này không?');">
                        <button type="submit" class="btn btn-danger">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
