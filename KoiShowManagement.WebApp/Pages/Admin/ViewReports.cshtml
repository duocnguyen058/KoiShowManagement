@page
@model KoiShowManagement.WebApp.Pages.Admin.ViewReportsModel

<h2>Quản lý Báo cáo</h2>

<p>Danh sách các báo cáo:</p>

<table class="table">
    <thead>
        <tr>
            <th>Tên Báo cáo</th>
            <th>Ngày Tạo</th>
            <th>Chi Tiết</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model.Reports)
        {
            <tr>
                <td>@report.Name</td>
                <td>@report.CreationDate.ToString("dd/MM/yyyy")</td>
                <td>@report.Details</td>
            </tr>
        }
    </tbody>
</table>
