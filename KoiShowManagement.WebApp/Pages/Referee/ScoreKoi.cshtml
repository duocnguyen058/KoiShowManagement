@page
@model KoiShowManagement.WebApp.Pages.Referee.ScoreKoiModel

<h2>@Model.Message</h2>

<!-- Hiển thị thông tin điểm số cá koi -->
<div>
    <h3>Điểm số cá koi</h3>
    <p>Cá koi ID: @Model.GetScore().FishId</p>
    <p>Điểm số: @Model.GetScore().ScoreValue</p>
    <p>Trọng tài: @Model.GetScore().JudgeName</p>
</div>

<!-- Form gửi điểm số -->
<form method="post">
    <div>
        <label for="FishId">Cá koi ID:</label>
        <input type="number" id="FishId" name="Score.FishId" value="@Model.GetScore().FishId" />
    </div>
    <div>
        <label for="ScoreValue">Điểm số:</label>
        <input type="number" id="ScoreValue" name="Score.ScoreValue" value="@Model.GetScore().ScoreValue" />
    </div>
    <div>
        <label for="JudgeName">Trọng tài:</label>
        <input type="text" id="JudgeName" name="Score.JudgeName" value="@Model.GetScore().JudgeName" />
    </div>
    <button type="submit">Lưu điểm số</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div>
        <strong>@Model.Message</strong>
    </div>
}
