@model KoiShowManagement.Repositories.Entities.Manager

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết Người Quản lý</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
</head>
<body>
    <div class="wrapper">
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="#" class="brand-link">
                <img src="logo.png" alt="Logo" class="brand-image img-circle elevation-3">
                <span class="brand-text font-weight-light">Cuộc thi Cá Koi</span>
            </a>
        </aside>

        <div class="content-wrapper">
            <div class="content-header">
                <h1>Chi tiết Người Quản lý</h1>
            </div>

            <div class="content">
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Thông tin Người Quản lý</h3>
                        </div>
                        <div class="card-body">
                            <p><strong>ID:</strong> @Model.ManagerId</p>
                            <p><strong>Tên:</strong> @Model.Name</p>
                            <p><strong>Phòng ban:</strong> @Model.Department</p>
                            <a href="@Url.Action("Edit", "Manager", new { id = Model.ManagerId })" class="btn btn-primary">Chỉnh sửa</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <footer class="main-footer">
            <strong>&copy; 2024 <a href="#">Cuộc thi Cá Koi</a>.</strong> All rights reserved.
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
</body>
</html>
