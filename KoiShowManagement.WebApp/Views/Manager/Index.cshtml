@model List<KoiShowManagement.Repositories.Entities.Manager>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý Cuộc thi Cá Koi</title>
    <!-- Liên kết đến các file CSS của AdminLTE -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        /* Reset các thuộc tính mặc định */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Body */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f6f9;
            margin: 0;
            padding: 0;
        }

        /* Wrapper chứa toàn bộ trang */
        .wrapper {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .main-sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            height: 100vh;
            padding-top: 20px;
            position: fixed;
            top: 0;
            left: 0;
        }

        .main-sidebar .brand-link {
            text-align: center;
            margin-bottom: 20px;
        }

        .main-sidebar .brand-link img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
        }

        .main-sidebar .nav-link {
            color: white;
            padding: 10px;
            font-size: 16px;
            text-transform: uppercase;
            display: flex;
            align-items: center;
            text-decoration: none;
        }

        .main-sidebar .nav-link:hover {
            background-color: #1d2124;
        }

        .main-sidebar .nav-link i {
            margin-right: 10px;
        }

        /* Content Wrapper */
        .content-wrapper {
            margin-left: 250px;
            padding: 20px;
            width: calc(100% - 250px);
        }

        .content-header h1 {
            font-size: 24px;
            font-weight: bold;
            color: #333;
        }

        .card {
            margin-bottom: 20px;
            border: none;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: white;
            padding: 15px;
            font-size: 18px;
        }

        .card-body {
            background-color: #ffffff;
            padding: 20px;
        }

        .table {
            width: 100%;
            margin-bottom: 1rem;
            background-color: #fff;
            border-collapse: collapse;
        }

        .table th, .table td {
            padding: 12px;
            text-align: left;
        }

        .table th {
            background-color: #f4f6f9;
        }

        .table td {
            border-top: 1px solid #ddd;
        }

        .table .btn {
            margin-right: 5px;
        }

        /* Chart Styles */
        .chart {
            width: 100%;
            height: 300px;
            background-color: #f9f9f9;
        }

        /* Footer */
        footer.main-footer {
            background-color: #343a40;
            color: white;
            text-align: center;
            padding: 10px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

            .main-sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }

            .content-wrapper {
                margin-left: 0;
                width: 100%;
            }
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="#" class="brand-link">
                <img src="logo.png" alt="Logo" class="brand-image img-circle elevation-3">
                <span class="brand-text font-weight-light">Cuộc thi Cá Koi</span>
            </a>
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Triễn lãm cá Koi</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>Quản lý Người Dùng</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-calendar-alt"></i>
                                <p>Quản lý Sự kiện</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-trophy"></i>
                                <p>Chấm điểm Cá Koi</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-chart-line"></i>
                                <p>Báo Cáo</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">Cuộc thi triễn lãm cá Koi</h1>
                        </div>
                    </div>
                </div>
            </div>

            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Danh sách Người Dùng</h3>
                                </div>
                                <div class="card-body">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Tên</th>
                                                <th>Chức vụ</th>
                                                <th>Ngày tham gia</th>
                                                <th>Hành động</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>1</td>
                                                <td>Nguyễn Văn A</td>
                                                <td>Quản lý</td>
                                                <td>01/01/2022</td>
                                                <td><button class="btn btn-primary">Sửa</button> <button class="btn btn-danger">Xóa</button></td>
                                            </tr>
                                            <tr>
                                                <td>2</td>
                                                <td>Trần Thị B</td>
                                                <td>Thành viên</td>
                                                <td>15/02/2022</td>
                                                <td><button class="btn btn-primary">Sửa</button> <button class="btn btn-danger">Xóa</button></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Báo Cáo Kết Quả</h3>
                                </div>
                                <div class="card-body">
                                    <div class="chart">
                                        <canvas id="reportChart"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 3.2.0
            </div>
            <strong>&copy; 2024 <a href="#">Cuộc thi Cá Koi</a>.</strong> All rights reserved.
        </footer>
    </div>

    <!-- Liên kết đến các file JS của AdminLTE và Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Tạo biểu đồ báo cáo (ví dụ sử dụng Chart.js)
        var ctx = document.getElementById('reportChart').getContext('2d');
        var reportChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Cuộc thi 1', 'Cuộc thi 2', 'Cuộc thi 3'],
                datasets: [{
                    label: 'Điểm số',
                    data: [10, 20, 15],
                    backgroundColor: ['#007bff', '#28a745', '#ffc107'],
                    borderColor: ['#0056b3', '#218838', '#e0a800'],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        document.addEventListener('DOMContentLoaded', function() {
            // Toggle Sidebar
            const sidebarToggle = document.getElementById('sidebar-toggle');
            const sidebar = document.querySelector('.main-sidebar');

            sidebarToggle.addEventListener('click', function() {
                sidebar.classList.toggle('active');
            });

            // Handle form submission (just as a basic example)
            const form = document.getElementById('userForm');
            if (form) {
                form.addEventListener('submit', function(e) {
                    e.preventDefault(); // Prevent form from submitting normally

                    const formData = new FormData(form);
                    let data = {};
                    formData.forEach((value, key) => {
                        data[key] = value;
                    });

                    console.log('Form Data Submitted:', data);
                });
            }

            // Example chart rendering logic (simple chart)
            const chartContainer = document.querySelector('.chart');
            if (chartContainer) {
                const canvas = document.createElement('canvas');
                chartContainer.appendChild(canvas);

                const ctx = canvas.getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: ['Koi 1', 'Koi 2', 'Koi 3'],
                        datasets: [{
                            label: 'Scores',
                            data: [90, 75, 85],
                            backgroundColor: ['#007bff', '#28a745', '#dc3545'],
                        }]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            }
        });
    </script>
</body>
</html>
