@model List<KoiShowManagement.Repositories.Entities.Manager>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách Người Quản lý</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    <div class="wrapper">
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="#" class="brand-link">
                <img src="logo.png" alt="Logo" class="brand-image img-circle elevation-3">
                <span class="brand-text font-weight-light">Cuộc thi Cá Koi</span>
            </a>
        </aside>

        <div class="content-wrapper">
            <div class="content-header">
                <h1>Danh sách Người Quản lý</h1>
            </div>

            <div class="content">
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Danh sách Người Quản lý</h3>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Tên</th>
                                        <th>Phòng ban</th> <!-- Chỉnh lại cột "Chức vụ" thành "Phòng ban" -->
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var manager in Model)
                                    {
                                        <tr>
                                            <td>@manager.ManagerId</td> <!-- Thay Id bằng ManagerId -->
                                            <td>@manager.Name</td>
                                            <td>@manager.Department</td> <!-- Thay Position bằng Department -->
                                            <td>
                                                <a href="@Url.Action("Details", "Manager", new { id = manager.ManagerId })" class="btn btn-info">Chi tiết</a> <!-- Thay Id bằng ManagerId -->
                                                <a href="@Url.Action("Edit", "Manager", new { id = manager.ManagerId })" class="btn btn-primary">Sửa</a> <!-- Thay Id bằng ManagerId -->
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <footer class="main-footer">
            <strong>&copy; 2024 <a href="#">Cuộc thi Cá Koi</a>.</strong> All rights reserved.
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
</body>
</html>
