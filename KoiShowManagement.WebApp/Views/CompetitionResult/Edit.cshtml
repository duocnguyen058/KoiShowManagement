@model KoiShowManagement.Repositories.Entities.CompetitionResult

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sửa kết quả cuộc thi</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
</head>
<body>
    <div class="wrapper">
        @await Html.PartialAsync("_Navbar")

        <div class="content-wrapper">
            <div class="content-header">
                <h1>Sửa kết quả cuộc thi</h1>
            </div>

            <div class="content">
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Chỉnh sửa kết quả cuộc thi</h3>
                        </div>
                        <div class="card-body">
                            <form method="post" action="@Url.Action("Edit", "CompetitionResult", new { id = Model.ResultId })">
                                <div class="form-group">
                                    <label for="KoiId">Mã Koi</label>
                                    <select class="form-control" id="KoiId" name="KoiId">
                                        @foreach (var koi in ViewBag.Kois)
                                        {
                                            <option value="@koi.KoiId" @(koi.KoiId == Model.KoiId ? "selected" : "")>@koi.Name</option>
                                        }
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="RefereeId">Mã Giám Khảo</label>
                                    <select class="form-control" id="RefereeId" name="RefereeId">
                                        @foreach (var referee in ViewBag.Referees)
                                        {
                                            <option value="@referee.RefereeId" @(referee.RefereeId == Model.RefereeId ? "selected" : "")>@referee.Name</option>
                                        }
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="EventId">Mã Cuộc Thi</label>
                                    <select class="form-control" id="EventId" name="EventId">
                                        @foreach (var eventItem in ViewBag.Events)
                                        {
                                            <option value="@eventItem.EventId" @(eventItem.EventId == Model.EventId ? "selected" : "")>@eventItem.EventName</option>
                                        }
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="Score">Điểm</label>
                                    <input type="number" class="form-control" id="Score" name="Score" value="@Model.Score" required />
                                </div>

                                <div class="form-group">
                                    <label for="Feedback">Phản Hồi</label>
                                    <textarea class="form-control" id="Feedback" name="Feedback">@Model.Feedback</textarea>
                                </div>

                                <button type="submit" class="btn btn-primary">Cập nhật kết quả</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @await Html.PartialAsync("_Footer")
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
</body>
</html>
