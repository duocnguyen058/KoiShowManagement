@model KoiShowManagement.Repositories.Entities.CompetitionResult

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tạo kết quả cuộc thi</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
</head>
<body>
    <div class="wrapper">
        @await Html.PartialAsync("_Navbar")

        <div class="content-wrapper">
            <div class="content-header">
                <h1>Tạo kết quả cuộc thi mới</h1>
            </div>

            <div class="content">
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Thông tin kết quả</h3>
                        </div>
                        <div class="card-body">
                            <form method="post" action="@Url.Action("Create", "CompetitionResult")">
                                <div class="form-group">
                                    <label for="CompetitionName">Tên cuộc thi</label>
                                    <input type="text" class="form-control" id="CompetitionName" name="CompetitionName" required />
                                </div>
                                <div class="form-group">
                                    <label for="Score">Điểm</label>
                                    <input type="number" class="form-control" id="Score" name="Score" required />
                                </div>
                                <div class="form-group">
                                    <label for="ScoreDate">Ngày chấm điểm</label>
                                    <input type="date" class="form-control" id="ScoreDate" name="ScoreDate" required />
                                </div>
                                <button type="submit" class="btn btn-primary">Tạo kết quả</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @await Html.PartialAsync("_Footer")
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
</body>
</html>
