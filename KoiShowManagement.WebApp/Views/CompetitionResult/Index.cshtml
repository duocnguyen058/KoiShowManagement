@model List<KoiShowManagement.Repositories.Entities.CompetitionResult>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách kết quả cuộc thi</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
</head>
<body>
    <div class="wrapper">
        @await Html.PartialAsync("_Navbar")

        <div class="content-wrapper">
            <div class="content-header">
                <h1>Danh sách kết quả cuộc thi</h1>
            </div>

            <div class="content">
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Danh sách các kết quả cuộc thi</h3>
                            <a href="@Url.Action("Create", "CompetitionResult")" class="btn btn-success float-right">Tạo kết quả mới</a>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Tên cuộc thi</th>
                                        <th>Điểm</th>
                                        <th>Ngày chấm điểm</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var result in Model)
                                    {
                                        <tr>
                                            <td>@result.ResultId</td>
                                            <!-- Lấy tên cuộc thi từ Event -->
                                            <td>@result.Event?.EventName</td>
                                            <td>@result.Score</td>
                                            <!-- Nếu có trường ngày chấm điểm, hiển thị -->
                                            <td>@result.Event?.EventDate?.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <a href="@Url.Action("Details", "CompetitionResult", new { id = result.ResultId })" class="btn btn-info">Chi tiết</a>
                                                <a href="@Url.Action("Edit", "CompetitionResult", new { id = result.ResultId })" class="btn btn-primary">Sửa</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @await Html.PartialAsync("_Footer")
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
</body>
</html>
