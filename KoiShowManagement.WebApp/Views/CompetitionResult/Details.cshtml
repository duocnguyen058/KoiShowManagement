@model KoiShowManagement.Repositories.Entities.CompetitionResult

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết kết quả cuộc thi</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
</head>
<body>
    <div class="wrapper">
        @await Html.PartialAsync("_Navbar")

        <div class="content-wrapper">
            <div class="content-header">
                <h1>Chi tiết kết quả cuộc thi</h1>
            </div>

            <div class="content">
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Thông tin kết quả cuộc thi</h3>
                        </div>
                        <div class="card-body">
                            <p><strong>Id:</strong> @Model.ResultId</p>
                            <p><strong>Mã Koi:</strong> @Model.KoiId</p>
                            <p><strong>Tên Koi:</strong> @Model.Koi?.Name</p> <!-- Display the Koi name -->
                            <p><strong>Mã Giám Khảo:</strong> @Model.RefereeId</p>
                            <p><strong>Tên Giám Khảo:</strong> @Model.Referee?.Name</p> <!-- Display the Referee name -->
                            <p><strong>Mã Cuộc Thi:</strong> @Model.EventId</p>
                            <p><strong>Tên Cuộc Thi:</strong> @Model.Event?.EventName</p> <!-- Display the Event name -->
                            <p><strong>Điểm:</strong> @Model.Score</p>
                            <p><strong>Phản Hồi:</strong> @Model.Feedback</p>

                            <a href="@Url.Action("Edit", "CompetitionResult", new { id = Model.ResultId })" class="btn btn-primary">Sửa</a>
                            <a href="@Url.Action("Index", "CompetitionResult")" class="btn btn-secondary">Quay lại</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @await Html.PartialAsync("_Footer")
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
</body>
</html>
