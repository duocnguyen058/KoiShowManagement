@model KoiShowManagement.Repositories.Entities.Profile

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chỉnh sửa thông tin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
</head>
<body>
    <div class="wrapper">
        @await Html.PartialAsync("_Navbar")

        <div class="content-wrapper">
            <div class="content-header">
                <h1>Chỉnh sửa thông tin cá nhân</h1>
            </div>

            <div class="content">
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Cập nhật thông tin người quản lý</h3>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm())
                            {
                                <div class="form-group">
                                    <label for="FullName">Họ tên</label>
                                    <input type="text" id="FullName" name="FullName" class="form-control" value="@Model.FullName" required />
                                </div>

                                <div class="form-group">
                                    <label for="Email">Email</label>
                                    <input type="email" id="Email" name="Email" class="form-control" value="@Model.Email" required />
                                </div>

                                <div class="form-group">
                                    <label for="PhoneNumber">Điện thoại</label>
                                    <input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" required />
                                </div>

                                <div class="form-group">
                                    <label for="Address">Địa chỉ</label>
                                    <input type="text" id="Address" name="Address" class="form-control" value="@Model.Address" />
                                </div>

                                <div class="form-group">
                                    <label for="Bio">Tiểu sử</label>
                                    <textarea id="Bio" name="Bio" class="form-control" rows="3">@Model.Bio</textarea>
                                </div>

                                <button type="submit" class="btn btn-success">Lưu thay đổi</button>
                                <a href="@Url.Action("Index", "Profile")" class="btn btn-secondary">Hủy</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @await Html.PartialAsync("_Footer")
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
</body>
</html>
