@model KoiShowManagement.Repositories.Entities.Member

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chỉnh Sửa Thành viên</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
</head>
<body>
    <div class="wrapper">
        @await Html.PartialAsync("_Navbar")

        <div class="content-wrapper">
            <div class="content-header">
                <h1>Chỉnh Sửa Thành viên</h1>
            </div>

            <div class="content">
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Chỉnh Sửa Thành viên</h3>
                        </div>
                        <div class="card-body">
                            <form method="post" asp-action="Edit" asp-controller="Member">
                                <input type="hidden" name="MemberId" value="@Model.MemberId" />

                                <div class="form-group">
                                    <label for="Name">Tên Thành viên</label>
                                    <input asp-for="Name" class="form-control" id="Name" required />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label for="Email">Email</label>
                                    <input asp-for="Email" type="email" class="form-control" id="Email" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label for="JoinDate">Ngày tham gia</label>
                                    <input asp-for="MembershipDate" type="date" class="form-control" id="JoinDate" required />
                                    <span asp-validation-for="MembershipDate" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-primary">Lưu</button>
                                <a href="@Url.Action("Index", "Member")" class="btn btn-secondary">Hủy</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @await Html.PartialAsync("_Footer")
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
</body>
</html>
