@model KoiShowManagement.Repositories.Entities.Koi

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tạo Mới Cá Koi</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
</head>
<body>
    <div class="wrapper">
        @await Html.PartialAsync("_Navbar")

        <div class="content-wrapper">
            <div class="content-header">
                <h1>Tạo Mới Cá Koi</h1>
            </div>

            <div class="content">
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Tạo Mới Cá Koi</h3>
                        </div>
                        <div class="card-body">
                            <form method="post" action="@Url.Action("Create", "Koi")">
                                <div class="form-group">
                                    <label asp-for="Name">Tên Cá</label>
                                    <input asp-for="Name" class="form-control" required />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                @* Chỉ thêm trường Gender nếu lớp Koi có thuộc tính này *@
                                @if (typeof(KoiShowManagement.Repositories.Entities.Koi).GetProperty("Gender") != null)
                                {
                                    <div class="form-group">
                                        <label asp-for="Gender">Giới tính</label>
                                        <input asp-for="Gender" class="form-control" required />
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>
                                }

                                <div class="form-group">
                                    <label asp-for="Age">Tuổi</label>
                                    <input asp-for="Age" class="form-control" type="number" required />
                                    <span asp-validation-for="Age" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-primary">Lưu</button>
                                <a href="@Url.Action("Index", "Koi")" class="btn btn-secondary">Hủy</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @await Html.PartialAsync("_Footer")
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
</body>
</html>
