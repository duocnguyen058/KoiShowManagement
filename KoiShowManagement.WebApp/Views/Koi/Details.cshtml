<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi Tiết Cá Koi</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
</head>
<body>
    <div class="wrapper">
        @await Html.PartialAsync("_Navbar")

        <div class="content-wrapper">
            <div class="content-header">
                <h1>Chi Tiết Cá Koi</h1>
            </div>

            <div class="content">
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Thông Tin Cá Koi</h3>
                        </div>
                        <div class="card-body">
                            <p><strong>ID:</strong> @Model.KoiId</p>
                            <p><strong>Tên:</strong> @Model.Name</p>
                            <p><strong>Tuổi:</strong> @Model.Age</p>
                            <p><strong>Kích thước:</strong> @Model.Size cm</p>
                            <p><strong>Màu sắc:</strong> @Model.Color</p>
                            <p><strong>Thành viên sở hữu:</strong> @(Model.Member != null ? Model.Member.Name : "Chưa có")</p>
                            <a href="@Url.Action("Edit", "Koi", new { id = Model.KoiId })" class="btn btn-primary">Chỉnh sửa</a>
                        </div>
                    </div>

                    <!-- Thông tin kết quả thi đấu -->
                    <div class="card mt-3">
                        <div class="card-header">
                            <h3 class="card-title">Kết Quả Thi Đấu</h3>
                        </div>
                        <div class="card-body">
                            @if (Model.CompetitionResults.Any())
                            {
                                <ul>
                                    @foreach (var result in Model.CompetitionResults)
                                    {
                                        <li>@result.CompetitionName - Điểm: @result.Score</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p>Chưa có kết quả thi đấu.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @await Html.PartialAsync("_Footer")
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
</body>
</html>
