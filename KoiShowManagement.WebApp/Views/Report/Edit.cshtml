@model KoiShowManagement.Repositories.Entities.Report

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chỉnh sửa Báo cáo</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
</head>
<body>
    <div class="wrapper">
        @await Html.PartialAsync("_Navbar")

        <div class="content-wrapper">
            <div class="content-header">
                <h1>Chỉnh sửa Báo cáo</h1>
            </div>

            <div class="content">
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Cập nhật Báo cáo</h3>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("Edit", "Report", FormMethod.Post))
                            {
                                <div class="form-group">
                                    <label for="Title">Tiêu đề</label>
                                    <input type="text" id="Title" name="Title" class="form-control" value="@Model.Title" required />
                                </div>

                                <div class="form-group">
                                    <label for="Content">Nội dung</label>
                                    <textarea id="Content" name="Content" class="form-control" rows="5" required>@Model.Content</textarea>
                                </div>

                                <!-- Optionally, you can show the created date but not allow editing -->
                                <div class="form-group">
                                    <label for="CreatedDate">Ngày tạo</label>
                                    <input type="text" id="CreatedDate" class="form-control" value="@Model.CreatedAt?.ToString("dd/MM/yyyy")" disabled />
                                </div>

                                <button type="submit" class="btn btn-success">Lưu thay đổi</button>
                                <a href="@Url.Action("Index", "Report")" class="btn btn-secondary">Hủy</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @await Html.PartialAsync("_Footer")
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
</body>
</html>
