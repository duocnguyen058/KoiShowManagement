@{
    ViewData["Title"] = "Chỉnh Sửa Báo Cáo";
}

<h2>Chỉnh Sửa Báo Cáo</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label for="Title">Tiêu Đề</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
    </div>

    <div class="form-group">
        <label for="Date">Ngày</label>
        <input type="date" class="form-control" id="Date" name="Date" value="@Model.Date.ToString("yyyy-MM-dd")" required />
    </div>

    <div class="form-group">
        <label for="Description">Mô Tả</label>
        <textarea class="form-control" id="Description" name="Description" rows="4" required>@Model.Description</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Cập Nhật Báo Cáo</button>
</form>

<a href="@Url.Action("Index", "Report")">Quay lại danh sách báo cáo</a>
