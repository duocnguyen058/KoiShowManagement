@model KoiShowManagement.Repositories.Entities.Report

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết Báo cáo</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
</head>
<body>
    <div class="wrapper">
        @await Html.PartialAsync("_Navbar")

        <div class="content-wrapper">
            <div class="content-header">
                <h1>Chi tiết Báo cáo</h1>
            </div>

            <div class="content">
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Thông tin Báo cáo</h3>
                        </div>
                        <div class="card-body">
                            <p><strong>ID:</strong> @Model.ReportId</p>
                            <p><strong>Tiêu đề:</strong> @Model.Title</p>
                            <p><strong>Ngày tạo:</strong> @Model.CreatedAt?.ToString("dd/MM/yyyy")</p> <!-- Updated from CreatedDate to CreatedAt -->
                            <p><strong>Nội dung:</strong></p>
                            <p>@Model.Content</p>
                            <a href="@Url.Action("Edit", "Report", new { id = Model.ReportId })" class="btn btn-primary">Chỉnh sửa</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @await Html.PartialAsync("_Footer")
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
</body>
</html>
