@model KoiShowManagement.Repositories.Entities.Event

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chỉnh sửa sự kiện</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
</head>
<body>
    <div class="wrapper">
        @await Html.PartialAsync("_Navbar")

        <div class="content-wrapper">
            <div class="content-header">
                <h1>Chỉnh sửa sự kiện</h1>
            </div>

            <div class="content">
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Thông tin sự kiện</h3>
                        </div>
                        <div class="card-body">
                            <form method="post" action="@Url.Action("Edit", "Event")">
                                <input type="hidden" name="EventId" value="@Model.EventId" />
                                <div class="form-group">
                                    <label for="EventName">Tên sự kiện</label>
                                    <input type="text" class="form-control" id="EventName" name="EventName" value="@Model.EventName" required />
                                </div>
                                <div class="form-group">
                                    <label for="EventDate">Ngày bắt đầu</label>
                                    <input type="datetime-local" class="form-control" id="EventDate" name="EventDate" value="@Model.EventDate?.ToString("yyyy-MM-ddTHH:mm")" />
                                </div>
                                <div class="form-group">
                                    <label for="Location">Địa điểm</label>
                                    <input type="text" class="form-control" id="Location" name="Location" value="@Model.Location" />
                                </div>
                                <div class="form-group">
                                    <label for="ManagerId">Quản lý</label>
                                    <select class="form-control" id="ManagerId" name="ManagerId">
                                        <option value="">--Chọn quản lý--</option>
                                        @foreach (var manager in ViewData["Managers"] as IEnumerable<KoiShowManagement.Repositories.Entities.Manager>)
                                        {
                                            <option value="@manager.ManagerId" @(manager.ManagerId == Model.ManagerId ? "selected" : "")>@manager.Name</option>
                                        }
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Cập nhật sự kiện</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @await Html.PartialAsync("_Footer")
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
</body>
</html>
