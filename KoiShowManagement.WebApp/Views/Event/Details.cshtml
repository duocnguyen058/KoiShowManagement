@model KoiShowManagement.Repositories.Entities.Event

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết sự kiện</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
</head>
<body>
    <div class="wrapper">
        @await Html.PartialAsync("_Navbar")

        <div class="content-wrapper">
            <div class="content-header">
                <h1>Chi tiết sự kiện</h1>
            </div>

            <div class="content">
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Thông tin sự kiện</h3>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-2">Tên sự kiện</dt>
                                <dd class="col-sm-10">@Model.EventName</dd>

                                <dt class="col-sm-2">Ngày bắt đầu</dt>
                                <dd class="col-sm-10">@Model.EventDate?.ToString("dd/MM/yyyy HH:mm")</dd>

                                <dt class="col-sm-2">Địa điểm</dt>
                                <dd class="col-sm-10">@Model.Location</dd>

                                <dt class="col-sm-2">Quản lý</dt>
                                <dd class="col-sm-10">@Model.Manager?.Name</dd>
                            </dl>
                            <a href="@Url.Action("Edit", "Event", new { id = Model.EventId })" class="btn btn-primary">Chỉnh sửa</a>
                            <a href="@Url.Action("Index", "Event")" class="btn btn-secondary">Quay lại</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @await Html.PartialAsync("_Footer")
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
</body>
</html>
