@model IEnumerable<KoiShowManagement.Repositories.Entities.Event>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách sự kiện</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
</head>
<body>
    <div class="wrapper">
        @await Html.PartialAsync("_Navbar")

        <div class="content-wrapper">
            <div class="content-header">
                <h1>Danh sách sự kiện</h1>
            </div>

            <div class="content">
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Danh sách sự kiện</h3>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Tên sự kiện</th>
                                        <th>Ngày bắt đầu</th>
                                        <th>Địa điểm</th>
                                        <th>Quản lý</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var eventItem in Model)
                                    {
                                        <tr>
                                            <td>@eventItem.EventId</td>
                                            <td>@eventItem.EventName</td>
                                            <td>@eventItem.EventDate?.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@eventItem.Location</td>
                                            <td>@eventItem.Manager?.Name</td>
                                            <td>
                                                <a href="@Url.Action("Details", "Event", new { id = eventItem.EventId })" class="btn btn-info btn-sm">Chi tiết</a>
                                                <a href="@Url.Action("Edit", "Event", new { id = eventItem.EventId })" class="btn btn-warning btn-sm">Chỉnh sửa</a>
                                                <a href="@Url.Action("Delete", "Event", new { id = eventItem.EventId })" class="btn btn-danger btn-sm">Xóa</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @await Html.PartialAsync("_Footer")
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
</body>
</html>
